<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LMDH_QS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/LMDH_QS.styles.css" asp-append-version="true" /> *@
    <!-- Add Flatpickr styles and script in your _Layout.cshtml or page -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
</head>
<body>


    @{
        var controller = ViewContext.RouteData.Values["Controller"]?.ToString();
        var action = ViewContext.RouteData.Values["Action"]?.ToString();

        var hideHeader = (controller == "Home" && action == "Index") ||
        (controller == "PatientRegistration" && action == "PatientRegistrationForm") || 
        (controller == "Account" && action == "Login") ||
        (controller == "Home" && action == "PageSelector") ||
        (controller == "Public" && action == "PublicDisplay");
    }

    @if (!hideHeader)
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                        Laurel Memorial District Hospital
                    </a>

                    <div class="d-flex align-items-center ms-auto">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            var firstName = User.FindFirst("FirstName")?.Value ?? User.Identity.Name;

                            <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    Logout (@firstName)
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </nav>
        </header>
    }



    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

@*     <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - LMDH_QS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
